<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_width="match_parent"
            android:layout_height="64dp" />

        <com.prime.redef.flatui.FlatTextView
            android:id="@+id/recipeTitle2"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="#ff000000"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="TITLE"
            android:layout_height="wrap_content" />

        <com.prime.redef.flatui.FlatTextView
            android:id="@+id/recipeTitle"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="#ff000000"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text=""
            android:layout_height="wrap_content" />

        <com.prime.redef.flatui.FlatTextView
            android:id="@+id/recipeDescription2"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="#ff000000"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="DESCRIPTION"
            android:layout_height="wrap_content" />

        <com.prime.redef.flatui.FlatTextView
            android:id="@+id/recipeDescription"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="#ff000000"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text=""
            android:layout_height="wrap_content" />

            <com.prime.redef.flatui.FlatTextView
                android:id="@+id/recipePortion2"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="#ff000000"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:text="Portion: "
                android:layout_height="wrap_content" />

            <com.prime.redef.flatui.FlatTextView
                android:id="@+id/recipePortion"
                android:layout_width="match_parent"
                android:textColor="#ff000000"
                android:layout_margin="8dp"
                android:text=""
                android:layout_height="wrap_content" />


        <com.prime.redef.flatui.FlatTextView
            android:id="@+id/recipePrepareTime2"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="#ff000000"
            android:textSize="20dp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="Prepare Time: "
            android:layout_height="wrap_content" />

        <com.prime.redef.flatui.FlatTextView
            android:id="@+id/recipePrepareTime"
            android:textColor="#ff000000"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text=""
            android:layout_height="wrap_content" />

        <com.prime.redef.flatui.FlatTextView
            android:id="@+id/recipeIngredients2"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="Ingredients: "
            android:layout_height="wrap_content" />

        <com.prime.redef.flatui.FlatTextView
            android:id="@+id/recipeIngredients"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text=""
            android:layout_height="wrap_content" />

        <com.prime.redef.flatui.FlatTextView
            android:id="@+id/recipeSteps2"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="Steps: "
            android:layout_height="wrap_content" />

        <com.prime.redef.flatui.FlatTextView
            android:id="@+id/recipeSteps"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:textColor="#000000"
            android:text=""
            android:layout_height="wrap_content" />

        <com.prime.redef.flatui.FlatTextView
            android:id="@+id/recipeTags2"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="Tags: "
            android:layout_height="wrap_content" />

        <com.prime.redef.flatui.FlatTextView
            android:id="@+id/recipeTags"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:textColorHighlight="@color/colorPrimary"
            android:text=""
            android:layout_height="wrap_content" />

        <com.prime.redef.flatui.FlatButtonPrimary
            android:textColor="#ff000000"
            android:layout_margin="16dp"
            android:layout_gravity="right"
            android:id="@+id/likeButton"
            android:text="Like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>

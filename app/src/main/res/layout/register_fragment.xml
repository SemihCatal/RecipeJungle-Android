<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abc">
    <LinearLayout
        android:background="#48000000"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.prime.redef.flatui.FlatTextView
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="Please Enter Username"
            android:textColor="#FFFFFFFF"
            android:layout_height="wrap_content" />

        <com.prime.redef.flatui.FlatEditText
            android:id="@+id/editText1"
            android:layout_margin="8dp"
            android:hint="Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"/>

        <com.prime.redef.flatui.FlatTextView
            android:layout_margin="8dp"
            android:text="Please Enter Password"
            android:textColor="#FFFFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.prime.redef.flatui.FlatEditText
            android:id="@+id/editText2"
            android:layout_margin="8dp"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"/>

        <com.prime.redef.flatui.FlatTextView
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="Please Enter Email"
            android:textColor="#FFFFFFFF"
            android:layout_height="wrap_content" />

        <com.prime.redef.flatui.FlatEditText
            android:id="@+id/editText3"
            android:layout_margin="8dp"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"/>

        <com.prime.redef.flatui.FlatButtonPrimary
            android:id="@+id/button1"
            android:layout_margin="4dp"
            android:text="Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.prime.redef.flatui.FlatTextView
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:textAlignment="center"
            android:text="Login"
            android:textColor="#FFFFFFFF"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
